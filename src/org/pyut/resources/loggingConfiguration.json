{
    "version": 1,
    "disable_existing_loggers": "False",
    "formatters": {
        "simple": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        },
        "pyutSimple": {
            "format": "%(asctime)s.%(msecs)03d %(levelname)s %(module)s: %(message)s",
            "datefmt" : "%H:%M:%S"
        }
    },
    "handlers": {
        "consoleHandler": {
            "class":     "logging.StreamHandler",
            "formatter": "pyutSimple",
            "stream":     "ext://sys.stdout"
        },
        "rotatingFileHandler": {
            "class": "logging.handlers.logging.handlers.RotatingFileHandler",
            "formatter": "pyutSimple",
            "filename": "/tmp/pyut.log",
            "mode": "a",
            "maxBytes": 10240,
            "backupCount": 5,
            "encoding": "utf-8"
        }
    },
    "loggers": {
        "root": {
            "level":     "ERROR",
            "handlers":  ["rotatingFileHandler"],
            "propagate": "False"
        },
        "Pyut": {
            "level":     "INFO",
            "propagate": "False"
        },
        "org": {
            "level":     "WARNING",
            "propagate": "False"
        },
        "org.pyut": {
            "level":     "WARNING",
            "propagate": "False"
        },
        "org.pyut.ui": {
            "level":     "WARNING",
            "propagate": "False"
        },
        "org.pyut.general.Mediator": {
            "level":     "WARNING",
            "propagate": "False"
        },
        "org.pyut.ogl.OglObject": {
            "level":     "WARNING",
            "propagate": "False"
        },
        "org.pyut.miniogl.Shape": {
            "level":     "DEBUG",
            "propagate": "False"
        },
        "org.pyut.miniogl.LineShape": {
            "level":     "DEBUG",
            "propagate": "False"
        },
        "org.pyut.plugins.io.javasupport.ReverseJava": {
            "level":     "INFO",
            "propagate": "False"
        }

    }
}
